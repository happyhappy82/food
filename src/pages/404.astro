---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
---

<Layout title="페이지를 찾을 수 없습니다 - 테이스트 가이드" description="요청하신 페이지를 찾을 수 없습니다.">
  <Header />
  <main role="main" class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <h1 class="text-6xl font-black text-gray-900 mb-4">404</h1>
    <p class="text-xl text-gray-700 mb-8">요청하신 페이지를 찾을 수 없습니다.</p>
    <a
      href="/"
      class="inline-flex items-center px-6 py-3 bg-gray-900 text-white font-medium rounded-lg hover:bg-gray-800 transition-colors min-h-[48px]"
    >
      홈으로 돌아가기
    </a>
  </main>
</Layout>
