---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import RestaurantCard from '@/components/RestaurantCard.astro';
import { getSortedRestaurants } from '@/utils/restaurants';

const restaurants = getSortedRestaurants();
const SITE_NAME = '테이스트 가이드';
---

<Layout title={SITE_NAME}>
  <Header />
  <main role="main">
    <h1 class="sr-only">테이스트 가이드 - 한국 지역별 맛집 정보</h1>
    <div class="flex flex-col gap-8 -mt-[10px]">
      {restaurants.length === 0 ? (
        <p class="text-gray-600">아직 등록된 맛집이 없습니다.</p>
      ) : (
        restaurants.map((restaurant) => (
          <RestaurantCard
            title={restaurant.title}
            date={restaurant.date}
            excerpt={restaurant.excerpt}
            slug={restaurant.slug}
          />
        ))
      )}
    </div>
  </main>
</Layout>
